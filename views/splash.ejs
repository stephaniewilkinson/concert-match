<!DOCTYPE html>
<html>
  <head>
  <% include ./partials/_head %>
  <link rel="stylesheet" href="/stylesheets/speaker.css">

  </head>
  <body class='cyan'>

  <div id="cabinet">
    <div class="main speaker tweeter">
      <div class="speaker tweeter med">
        <div class="speaker tweeter small"></div>
      </div>
    </div>
    <div class="main speaker woofer">
      <div class="speaker woofer small">
        <a href="/auth/spotify"><img src="../images/logo-medium.png" /></a>
      </div>
    </div>
  </div>


  <script>
      var lat, lng;
      navigator.geolocation.getCurrentPosition(function(pos){
        lat = pos.coords.latitude;
        lng = pos.coords.longitude;
        $.get("/api/location?lat=" + lat + "&lng=" + lng, function(){
          window.location.replace("/home");
        });
      });
  </script>
  </body>
</html>
